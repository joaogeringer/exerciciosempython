#exercicio 01

while True:
 try: 
    x = int(input('Digite um número: '))
    break
 except ValueError:
    print('Digite um número válido!')


#exercicio 02

def dividir(x, y):
 try:
    resultado = x / y
    print('a resposta é: ', resultado)
 except ZeroDivisionError:
    print('Divisão por zero')
